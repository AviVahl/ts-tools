    "@types/react-dom": "^16.0.8",
    "@types/source-map-support": "^0.4.1",
    "@types/webpack": "^4.4.14",
    "chai": "^4.2.0",
    "lerna": "^3.4.1",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "~3.1.1",
    "webpack": "^4.20.2"
